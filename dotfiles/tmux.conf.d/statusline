# This tmux statusbar config was created by tmuxline.vim
# on Sun, 14 Nov 2021

set -g status-justify "centre"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=colour8,bg=colour11"
set -g status-right-style "none"
set -g pane-active-border-style "fg=colour4"
set -g status-style "none,bg=colour0"
set -g message-style "fg=colour8,bg=colour11"
set -g pane-border-style "fg=colour11"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none,fg=colour4,bg=colour0"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=colour14,bg=colour0"
set -g status-left "#[fg=colour8,bg=colour4] #{session_name} #[fg=colour4,bg=colour11,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour11] #{window_flags} #[fg=colour11,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour14,bg=colour0] #{window_name} #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour14,bg=colour0] %a #[fg=colour11,bg=colour0,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour11] %b %d | %R #[fg=colour14,bg=colour11,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour14] #{host} "
setw -g window-status-format "#[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]#[default] #{window_index} | #{window_name} #[fg=colour0,bg=colour0,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=colour0,bg=colour11,nobold,nounderscore,noitalics]#[fg=colour8,bg=colour11] #{window_index} | #{window_name} #[fg=colour11,bg=colour0,nobold,nounderscore,noitalics]"
