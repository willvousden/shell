[user]
	name = Will Vousden
	email = will@vousden.me.uk
[color]
	ui = auto
[alias]
	s = status -sb
	c = checkout
	d = diff
	dc = diff --cached
	dw = diff --word-diff
	dcw = diff --cached --word-diff
	pf = pull --ff-only
[core]
	pager = less -RS -x4
	excludesfile = ~/.gitignore
	editor = /usr/bin/env vim
[merge]
	tool = splice
	conflictstyle = diff3
[mergetool "vimdiff"]
	cmd=vim -d -f -c "wincmd J" "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
	keepbackup=false
[mergetool "gvimdiff"]
	cmd=gvim -d -f -c "wincmd J" "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
	keepbackup=false
[mergetool "splice"]
	cmd="vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
	trustExitCode=true
[mergetool "gsplice"]
	cmd="gvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
	trustExitCode=true
[github]
	user = willvousden
[push]
	default = tracking
[include]
	path = .gitconfig_local
