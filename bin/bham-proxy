#!/bin/bash
port=10241
server=lnx0
stub="ssh -fC2qTN -D"
command="$stub $port $server"

proc=$(ps aux | grep "$stub" | grep -v grep | awk '{ print $2 }')
if [[ $1 == -k ]]; then
    networksetup -setsocksfirewallproxystate Wi-Fi off

    if [[ -n $proc ]]; then
        echo "Killing proxy."
        kill $proc
    else
        echo "No proxy exists."
    fi
else
    if [[ -z $proc ]]; then
        echo "Starting proxy on port $port to $server."
    else
        $0 -k > /dev/null
        echo "Renewing proxy."
    fi

    $command
    networksetup -setsocksfirewallproxystate Wi-Fi on
fi
